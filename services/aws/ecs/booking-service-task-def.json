{
  "family": "smartcampus-booking-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/smartcampus-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "booking-service",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.YOUR_REGION.amazonaws.com/smartcampus/booking-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 9094,
          "protocol": "tcp",
          "name": "http"
        }
      ],
      "environment": [
        { "name": "SERVICE_PORT", "value": "9094" },
        { "name": "DB_PORT",      "value": "3306"  },
        { "name": "DB_NAME",      "value": "campus_resource_db" }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT_ID:secret:smartcampus/rds:host::"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT_ID:secret:smartcampus/rds:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT_ID:secret:smartcampus/rds:password::"
        },
        {
          "name": "KAFKA_BOOTSTRAP_SERVERS",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT_ID:secret:smartcampus/msk:bootstrap_servers::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/smartcampus/booking-service",
          "awslogs-region": "YOUR_REGION",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget -qO- http://localhost:9094/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
